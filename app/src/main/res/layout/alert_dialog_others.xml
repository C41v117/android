<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/padding_large"
    android:background="@drawable/background_alert_dialog" >

    <com.btpn.sinaya.eform.custom.view.MTFTextView
        android:id="@+id/alert_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textStyle="bold" 
        android:textSize="@dimen/font_size_big"/>

    <com.btpn.sinaya.eform.custom.view.MTFTextView
        android:id="@+id/input_other_error_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/red"
        android:textSize="@dimen/font_size_small"
        android:textStyle="bold"
        android:visibility="invisible" />

    <com.btpn.sinaya.eform.custom.view.MTFEditText
        android:id="@+id/input_other_edittext"
        style="@style/edittext_with_drawable_background"
        android:layout_width="@dimen/login_edittext_width"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_large"
        android:layout_marginTop="@dimen/margin_medium"
        android:background="@drawable/edittext_border_background"
        android:ellipsize="middle"
        android:gravity="center"
        android:textSize="@dimen/font_size_medium"
        android:inputType="text" />

    <View style="@style/Line_gray" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <com.btpn.sinaya.eform.custom.view.MTFButton
            android:id="@+id/input_other_cancel_button"
            style="@style/button_with_drawable_background"
            android:layout_width="@dimen/dialog_button_width"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@color/transparent"
            android:text="@string/button_cancel"
            android:textColor="@drawable/button_text_color_blue" />

        <com.btpn.sinaya.eform.custom.view.MTFButton
            android:id="@+id/input_other_ok_button"
            style="@style/button_with_drawable_background"
            android:layout_width="@dimen/dialog_button_width"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@color/transparent"
            android:text="@string/button_ok"
            android:textColor="@drawable/button_text_color_blue" />
    </LinearLayout>

</LinearLayout>
