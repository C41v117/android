<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/background_alert_dialog"
              android:orientation="vertical"
              android:padding="@dimen/padding_large">

    <com.btpn.sinaya.eform.custom.view.MTFTextView
        android:id="@+id/message_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/deviceIsRoot"
        android:textSize="@dimen/font_size_medium"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:background="@color/transparent"
            android:orientation="horizontal"/>

        <com.btpn.sinaya.eform.custom.view.MTFButton
            android:id="@+id/ok_button"
            style="@style/button_with_drawable_background"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.35"
            android:background="@color/transparent"
            android:text="@string/exit"
            android:textColor="@drawable/button_text_color_blue"
            android:textSize="@dimen/font_size_medium"/>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:background="@color/transparent"
            android:orientation="horizontal"/>
    </LinearLayout>

</LinearLayout>