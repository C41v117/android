<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
  
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/padding_medium"
        android:background="@color/btpn_color">
        
        <com.btpn.sinaya.eform.custom.view.MTFTextView 
            android:id="@+id/title_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/profil_agen"
            android:textSize="@dimen/font_size_header"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:padding="@dimen/padding_small"/>
        
        <ImageButton 
	        android:id="@+id/header_customer_list_sync_button"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/icon_sync"
	        android:background="@drawable/button_image_background_default"
	        android:contentDescription="@string/app_name"
	        android:padding="@dimen/padding_medium"
	        android:visibility="invisible"/>
    </RelativeLayout>
    
    <View style="@style/Line"/>
    
    <ListView 
        android:id="@+id/list_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    
</LinearLayout>
