<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_form"
        android:background="@color/btpn_color"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/padding_medium"
        android:paddingRight="@dimen/padding_medium" >

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="@dimen/image_layout_width"
            android:layout_height="@dimen/image_layout_height"
            android:layout_gravity="center"
            android:background="@drawable/back_button_background"
            android:contentDescription="@string/button_back"
            android:src="@drawable/ic_back" />

        <com.btpn.sinaya.eform.custom.view.MTFTextView
            android:id="@+id/title_header"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_medium"
            android:gravity="center_vertical|left"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_header"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/padding_large"
        android:paddingRight="@dimen/padding_large"
        android:layout_marginTop="@dimen/margin_medium" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/form_input_height"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/margin_small">

            <com.btpn.sinaya.eform.custom.view.MTFTextView
                style="@style/form_label_style"
                android:text="@string/nama_nasabah" />

            <com.btpn.sinaya.eform.custom.view.MTFEditText
                android:id="@+id/nama_nasabah_edittext"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:maxLines="1"
                android:textSize="@dimen/font_size_medium"
                android:enabled="false"/>
        </LinearLayout>

            <LinearLayout
               android:layout_width="match_parent"
                    android:layout_height="@dimen/form_input_height"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/margin_small">

                    <com.btpn.sinaya.eform.custom.view.MTFTextView
                        style="@style/form_label_style"
                        android:text="No. Hp *" />

                    <com.btpn.sinaya.eform.custom.view.MTFEditText
                        android:id="@+id/no_hp_edittext"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.6"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textSize="@dimen/font_size_medium"
                        android:enabled="false"/>
                </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/margin_small">

            <com.btpn.sinaya.eform.custom.view.MTFTextView
                style="@style/form_label_style"
                android:text="Alamat *" />

            <com.btpn.sinaya.eform.custom.view.MTFEditText
                android:id="@+id/alamat_edittext"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:scrollbarStyle="insideInset"
                android:scrollbars="vertical"
                android:layout_weight="0.6"
                android:lines="5"
                android:maxLines="8"
                android:gravity="top|left"
                android:imeOptions="actionNext"
                android:inputType="textMultiLine"
                android:textSize="@dimen/font_size_medium"
                android:enabled="false"/>
        </LinearLayout>

