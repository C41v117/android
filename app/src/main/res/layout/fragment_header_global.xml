<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/btpn_color" >
    
    <ImageButton 
        android:id="@+id/header_global_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back"
        android:contentDescription="@string/app_name"
        android:background="@drawable/button_image_background_default"
        android:paddingLeft="@dimen/padding_medium"
        android:paddingTop="@dimen/padding_medium"
        android:paddingBottom="@dimen/padding_medium"/>
    
	<com.btpn.sinaya.eform.custom.view.MTFTextView 
	    android:id="@+id/header_global_title_textview"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:paddingLeft="@dimen/padding_small"
		android:gravity="center_vertical"
		android:textSize="@dimen/font_size_header"
		android:textColor="@color/white"
		android:textStyle="bold"/>
	
</LinearLayout>
