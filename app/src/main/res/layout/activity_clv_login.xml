<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbarStyle="outsideOverlay"
    android:background="@color/white"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:paddingTop="30dip"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="90dip"
                android:contentDescription="@string/app_name"
                android:src="@drawable/brezyn_icons" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="70dip"
                android:layout_marginBottom="@dimen/margin_small"
                android:contentDescription="@string/app_name"
                android:src="@drawable/brezyn_logo" />

            <com.btpn.sinaya.eform.custom.view.MTFEditText
                android:id="@+id/login_username_edittext"
                style="@style/edittext_with_drawable_background"
                android:layout_width="@dimen/login_edittext_width"
                android:layout_height="@dimen/form_input_height"
                android:layout_marginBottom="@dimen/margin_small"
                android:background="@drawable/edittext_gray_background"
                android:hint="@string/username_login"
                android:inputType="text"
                android:textColor="@color/dark_gray"
                android:textColorHint="@color/gray"
                android:textSize="@dimen/font_size_medium" />

            <com.btpn.sinaya.eform.custom.view.MTFEditText
                android:id="@+id/login_password_edittext"
                style="@style/edittext_with_drawable_background"
                android:layout_width="@dimen/login_edittext_width"
                android:layout_height="@dimen/form_input_height"
                android:layout_marginBottom="@dimen/margin_large"
                android:background="@drawable/edittext_gray_background"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:textColor="@color/dark_gray"
                android:textColorHint="@color/gray"
                android:textSize="@dimen/font_size_medium"/>

            <com.btpn.sinaya.eform.custom.view.MTFButton
                android:id="@+id/login_button"
                style="@style/button_with_drawable_background"
                android:layout_width="@dimen/login_button_width"
                android:layout_height="wrap_content"
                android:background="@drawable/button_gray_background"
                android:text="@string/button_login"
                android:textColor="@drawable/button_text_color_white"
                android:textSize="@dimen/font_size_medium"
                android:enabled="false"/>

        </LinearLayout>

        <LinearLayout
            android:layout_below="@+id/ll1"
            android:id="@+id/ll2"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:background="@color/white"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:gravity="center"
                android:background="@color/white"
                android:orientation="vertical">

                <com.btpn.sinaya.eform.custom.view.MTFTextView
                    android:id="@+id/forgot_pass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/forgot_password"
                    android:textColor="#ff3333"
                    android:textSize="@dimen/font_size_xsmall"
                    android:textStyle="bold"/>

            </RelativeLayout>
        </LinearLayout>

        <!--<LinearLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="0dp"-->
            <!--android:layout_weight="1"-->
            <!--android:gravity="center|bottom"-->
            <!--android:orientation="vertical">-->

            <!--<LinearLayout-->
                <!--android:id="@+id/LLsignup"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:paddingTop="@dimen/padding_large"-->
                <!--android:gravity="center"-->
                <!--android:orientation="horizontal">-->

                <RelativeLayout
                    android:layout_below="@+id/ll2"
                    android:layout_width="match_parent"
                    android:layout_height="50dip"
                    android:gravity="center|bottom"
                    android:orientation="vertical"
                    android:layout_alignParentBottom="true">

                    <com.btpn.sinaya.eform.custom.view.MTFTextView
                        android:id="@+id/dontHaveAccText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="Don't have an account? "
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/font_size_small"/>

                    <com.btpn.sinaya.eform.custom.view.MTFTextView
                        android:id="@+id/signUpTV"
                        android:layout_toRightOf="@+id/dontHaveAccText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="Sign up"
                        android:textColor="#ff3333"
                        android:textSize="@dimen/font_size_small"
                        android:textStyle="bold"/>

                </RelativeLayout>
            <!--</LinearLayout>-->
        <!--</LinearLayout>-->
    </RelativeLayout>
</ScrollView>